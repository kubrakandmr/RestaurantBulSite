<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.ApplicationUser.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place.PlaceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentPic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Point)
        </th>

